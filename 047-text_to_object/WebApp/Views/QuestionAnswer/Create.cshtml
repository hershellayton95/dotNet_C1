@model WebApp.Models.QuestionAnswerViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>QuestionAnswerViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" asp-items="new SelectList(Model.AuthorsId)" class="form-control">
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answers[0]" class="control-label">Answers 1</label>
                <input asp-for="Answers[0]" class="form-control" />
                <span asp-validation-for="Answers[0]" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answers[1]" class="control-label">Answers 2</label>
                <input asp-for="Answers[1]" class="form-control" />
                <span asp-validation-for="Answers[1]" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answers[2]" class="control-label">Answers 3</label>
                <input asp-for="Answers[2]" class="form-control" />
                <span asp-validation-for="Answers[2]" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answers[3]" class="control-label">Answers 4</label>
                <input asp-for="Answers[3]" class="form-control" />
                <span asp-validation-for="Answers[3]" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Accepted Answer:</label>
                <div class="form-check">
                    <input type="radio" asp-for="AcceptAnswer" value="1" class="form-check-input" />
                    <label class="form-check-label">Answer 1</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="AcceptAnswer" value="2" class="form-check-input" />
                    <label class="form-check-label">Answer 2</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="AcceptAnswer" value="3" class="form-check-input" />
                    <label class="form-check-label">Answer 3</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="AcceptAnswer" value="4" class="form-check-input" />
                    <label class="form-check-label">Answer 4</label>
                </div>
                <span asp-validation-for="AcceptAnswer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
